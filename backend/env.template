# Database Configuration
# Replace with your actual Supabase database URL
# For connection pooling, add these parameters to your DATABASE_URL:
# connection_limit=20&pool_timeout=60&connect_timeout=60&statement_timeout=30000
DATABASE_URL="postgresql://username:password@aws-1-eu-central-1.pooler.supabase.com:5432/postgres?schema=public&connection_limit=20&pool_timeout=60&connect_timeout=60&statement_timeout=30000"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="1d"

# Server Configuration
NODE_ENV="development"
PORT=5000

# CORS Configuration
BACKEND_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10MB"
